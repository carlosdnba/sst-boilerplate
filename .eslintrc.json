{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "ignorePatterns": [
    "frontend/",
    "backend/"
  ],
  "rules": {
    "semi": 1,
    "quotes": [
      1,
      "single"
    ],
    "no-new": "off",
    "class-methods-use-this": "off",
    "consistent-return": "off",
    "arrow-parens": "off",
    "import/prefer-default-export": "off",
    "camelcase": "off",
    "object-curly-newline": [
      "error",
      {
        "ObjectPattern": {
          "multiline": true,
          "minProperties": 6
        }
      }
    ]
  }
}